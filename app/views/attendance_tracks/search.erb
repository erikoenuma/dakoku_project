<div class="container px-4 px-lg-5">
    <div class="row gx-4 gx-lg-5 justify-content-center">
        <div class="col-md-10 col-lg-8 col-xl-11 mx-auto">
            <div class="container col-md-6">
                <div class="mt-4 align-items-center">
                <div><h1><%= @date.month %>月<%= @date.day %>日</h1></div>
                </div>

                <% if @results.length > 0%>
                    <table class="table">
                        <tbody>
                            <% @results.each do |track| %>
                            <tr>
                                <td><%= track.time %></td>
                                <td><%= link_to t('helpers.links.edit'), edit_user_project_attendance_track_path(@user_project, track), class:"btn btn-sm btn-primary text-white text-white" %></td>
                                <td><%= link_to t('helpers.links.destroy'), user_project_attendance_track_path(@user_project, track), method: :delete, data: { confirm: t('common.confirm_destroy') }, class:"btn btn-sm btn-outline-danger" %></td>
                            </tr>
                            <% end %>
                        </tbody>
                    </table>

                <% else %>
                    <p class="my-5">この日の実績はありません。</p>
                <% end %>

                <%= link_to t('helpers.links.back'), user_project_attendance_tracks_path(@user_project), class:"btn btn-outline-secondary text-black my-5" %>
            </div>
        </div>
    </div>
</div>

