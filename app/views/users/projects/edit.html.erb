<section class="vh-100">
  <div class="container py-5 h-100">
    <div class="row justify-content-center align-items-center h-100">
      <div class="col-12 col-lg-9 col-xl-7">
        <div class="card shadow-2-strong card-registration" style="border-radius: 15px;">
          <div class="card-body p-4 p-md-5">
            <h3 class="mb-4 pb-2 pb-md-0 mb-md-5"><%= t('.title') %></h3>
              <%= form_for(@project, url: user_custom_project_path(current_user, @project), local: true) do |form| %>
                <div class="row">
                  <div class="col-md-6 mb-4">
                      <div class="form-outline">
                        <label><%= form.label :name %></label>
                        <%= form.text_field :name, class:"form-control", placeholder:"案件名", required:true, maxlength:"255" %>
                      </div>
                  </div>
                </div>

                <div class="row">
                  <div class="col-md-6 mb-4">
                      <div class="form-outline">
                        <label><%= form.label :billing_destination_email %></label>
                        <%= form.text_field :billing_destination_email, class:"form-control", placeholder: "請求先メールアドレス", maxlength:"255" %>
                      </div>
                  </div>

                  <div class="col-md-6 mb-4">
                      <div class="form-outline">
                        <label><%= form.label :billing_destination_manager %></label>
                        <%= form.text_field :billing_destination_manager, class:"form-control", placeholder: "請求先担当者", maxlength:"255" %>
                      </div>
                  </div>
                </div>
                
                <div class="row justify-content-center">
                  <div class="mt-4 pt-2 mx-2">
                    <%= link_to t('helpers.links.back'), user_custom_projects_path(current_user), class:"btn btn-outline-light btn-lg" %>
                  </div>
                  <div class="mt-4 pt-2 mx-2">
                    <%= form.submit "更新", class:"btn btn-primary btn-lg" %>
                  </div>
                <div>
              <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
