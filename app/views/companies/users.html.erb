<div class="container px-4 px-lg-5">
    <div class="row gx-4 gx-lg-5 justify-content-center">
        <div class="col-md-10 col-lg-8 col-xl-11 mx-auto">
            <div class="row mt-4 align-items-center">
              <div class="col-3"><h1><%= t('.title') %></h1></div>
              <div class="col-3"><%= link_to t('helpers.links.new'), companies_new_employee_path, class:"btn btn-primary btn-sm my-5"%></div>
            </div>
          <table class="table">
            <thead class="thead-light">
              <tr>
                <th><%= User.human_attribute_name :name %></th>
                <th><%= User.human_attribute_name :email %></th>
                <th colspan="3"></th>
              </tr>
            </thead>

            <tbody>
              <% @users.each do |user| %>
                <tr>
                  <td><%= user.name %></td>
                  <td><%= user.email %></td>
                  <td><%= link_to t('helpers.links.edit'), companies_edit_employee_path(@company, user) %></td>
                  <td><%= link_to t('helpers.links.destroy'), companies_destroy_employee_path(@company, user), method: :delete, data: { confirm: t('common.confirm_destroy') } %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
    </div>
</div>