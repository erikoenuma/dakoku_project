<p id="notice"><%= notice %></p>

<h1><%= t('.title') %></h1>
<%= link_to t('helpers.links.new'), companies_new_employee_path %>

<table class="table">
  <thead>
    <tr>
      <th><%= User.human_attribute_name :name %></th>
      <th><%= User.human_attribute_name :email %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= link_to t('helpers.links.edit'), edit_user_registration_path(user) %></td>
        <td><%= link_to t('helpers.links.destroy'), companies_destroy_employee_path(@company, user), method: :delete, data: { confirm: t('common.confirm_destroy') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>