<h1>新規アサイン</h1>

<%= form_with(model: @user_project, url: validate_employee_company_url(@company), method: 'GET', local: true) do |form| %>
  <% if @user_project.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user_project.errors.count, "error") %> prohibited this project from being saved:</h2>

      <ul>
        <% @user_project.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label "案件名" %>
    <%= form.collection_select :project_id, @projects.all, :id, :name %>
  </div>

  <div class="field">
    <%= form.label "雇用形態" %>
    <div>
        <%= form.radio_button :employee, true, checked: true %>社員
        <%= form.radio_button :employee, false %>社員以外
    </div>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>

<% end %>
