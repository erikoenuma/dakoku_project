<div class="container px-4 px-lg-5">
    <div class="row gx-4 gx-lg-5 justify-content-center">
        <div class="col-md-10 col-lg-8 col-xl-11 mx-auto">
            <div class="row mt-4 align-items-center">
              <div class="col-3"><h1><%= t('.title') %></h1></div>
              <div class="col-3"><%= link_to t('helpers.links.new'), new_company_project_path(@company), class:"btn btn-primary btn-sm my-5"%></div>
            </div>
          <table class="table">
            <thead class="thead-light">
              <tr>
                <th><%= Project.human_attribute_name :name %></th>
                <th><%= Project.human_attribute_name :billing_destination_email %></th>
                <th><%= Project.human_attribute_name :billing_destination_manager %></th>
                <th><%= Project.human_attribute_name :budget %></th>
                <th colspan="3"></th>
              </tr>
            </thead>

            <tbody>
              <% @projects.each do |project| %>
                <tr>
                  <td><%= project.name %></td>
                  <td><%= project.billing_destination_email %></td>
                  <td><%= project.billing_destination_manager %></td>
                  <td><%= project.budget %>万円</td>
                  <td><%= link_to t('helpers.links.show'), company_project_url(@company, project) %></td>
                  <td><%= link_to t('helpers.links.edit'), edit_company_project_path(@company,project) %></td>
                  <td><%= link_to t('helpers.links.destroy'), company_project_url(@company, project), method: :delete, data: { confirm: t('common.confirm_destroy') } %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
    </div>
</div>