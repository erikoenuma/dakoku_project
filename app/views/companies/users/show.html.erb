<div class="container px-4 px-lg-5">
    <div class="row gx-4 gx-lg-5 justify-content-center">
        <div class="col-md-10 col-lg-8 col-xl-11 mx-auto">
            <div class="container mt-5">
                <div class="my-4 text-center">
                    <h1><%= @user.name %></h1>
                </div>
                <table class="table">
                    <thead class="thead-light">
                        <tr>
                        <th><%= Project.human_attribute_name :name %></th>
                        <th><%= Contract.human_attribute_name :role %></th>
                        <% if !@user.company_user %>
                            <th><%= Contract.human_attribute_name :wage %></th>
                            <th><%= Contract.human_attribute_name :hours_per_month %></th>
                            <th>契約期間</th>
                            <th><%= Contract.human_attribute_name :under_contract %></th>
                            <th><%= Contract.human_attribute_name :daily_reports_required %></th>
                            <th colspan="3"></th>
                        <% else %>
                            <th><%= Authority.human_attribute_name :authority %></th>                    
                        <% end %>
                        </tr>
                    </thead>

                    <tbody>
                        <%# 所属企業の案件のみ表示する %>
                        <% @projects.where(company_id: @company.id).each do |project| %>
                        <% @contract = @user.user_projects.where(project_id: project.id).first.contract %>
                            <tr>
                                <td><%= project.name %></td>
                                <td><%= @contract.role %></td>
                                <% if !@user.company_user %>
                                    <td><%= @contract.wage %>円/<%= @contract.wage_per %></td>
                                    <td><%= @contract.hours_per_month %>時間</td>
                                    <td><%= @contract.start_at %>～<%= @contract.end_at %></td>
                                    <td><%= @contract.under_contract ? "在籍中" : "退職済" %></td>
                                    <td><%= @contract.daily_reports_required ? "要" : "不要" %></td>
                                <% else %>
                                    <td><%= @user.user_company.authority.to_ja %></td>
                                <% end %>
                            </tr>
                        <% end %>
                    </tbody>
                </table>

            <div class="py-2 text-center my-5">
                <h2>実績</h2>
                <h5>（<%= @project.name %>）</h5>
                <h5><%= @monthly_working_time %></h5>
            </div>

            <% if @monthly_tracks.length > 0 %>

                <table class="table">
                    <thead class="thead-light">
                        <tr>
                            <th>日付</th>
                            <th>実績</th>
                            <th>稼働時間</th>
                            <th>日報</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% @monthly_tracks.each do |monthly_track| %>
                            <%# 最初は月の数字が入ってるのでdrop(1)してattendance_tracksを取得する %>
                            <% monthly_track.drop(1).each do |daily_tracks| %>
                                <%# 日付ごとにグループ化する %>
                                <% daily_tracks.group_by{|p| p.start_at_ja.day}.sort.reverse.each do |tracks| %>
                                    <tr>
                                        <%# 日付 %>
                                        <td><%= monthly_track.first %>月<%= tracks.first %>日</td>
                                        <td>
                                            <%# 実績 %>
                                            <% tracks.second.sort{|a, b| a[:start_at] <=> b[:start_at] }.each do |track| %>
                                                <%= track.time %><br>
                                            <% end %>
                                        </td>
                                        <td>
                                            <%# 稼働時間を算出 %>
                                            <% sum = tracks.second.map{|p| p.duration_minutes }.sum %>
                                            <%= (sum/60/60).round %>時間<%= (sum/60%60).round %>分
                                        </td>
                                        <%# 日報 %>
                                    </tr>
                                <% end %>
                            <% end %>
                        <% end %>
                    </tbody>
                </table>

            <% else %>

                <p class="text-center">まだ実績がありません</p>

            <% end %>
            <%= link_to t('helpers.links.edit'), edit_company_contract_path(@company, @project, @contract), class:"btn btn-outline-secondary text-black my-5" %>
            <%= link_to t('helpers.links.back'), company_project_path(@company, @project), class:"btn btn-outline-secondary text-black my-5" %>

        </div>
    </div>
</div>

