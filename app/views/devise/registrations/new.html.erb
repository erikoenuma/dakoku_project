<section class="vh-100">
  <div class="container-fluid h-custom">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-md-9 col-lg-6 col-xl-5">
        <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.webp"
          class="img-fluid" alt="Sample image">
      </div>
      <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="divider d-flex align-items-center my-4">
              <h4 class="text-center fw-bold mx-3 mb-0">アカウント作成</h4>
          </div>

          <div class="form-outline mb-3">
            <%= f.text_field :name, id:"form3Example3", class:"form-control", autofocus: true, autocomplete: "name", placeholder:"ユーザー名", required: true, maxlength: "30" %>
          </div>

          <div class="form-outline mb-3">
            <%= f.email_field :email, id:"form3Example3", class:"form-control", autofocus: true, autocomplete: "email", placeholder:"メールアドレス", required: true, maxlength:"255" %>
          </div>

          <div class="form-outline mb-3">
            <%= f.password_field :password, id:"form3Example4", class:"form-control", autocomplete: "current-password", placeholder:"パスワード", required: true, maxlength:"255",minlength: "6"%>
          </div>

          <div class="form-outline mb-3">
            <%= f.password_field :password_confirmation, id:"form3Example4", class:"form-control", autocomplete: "current-password", placeholder:"パスワード(確認)", required: true, maxlength:"255",minlength: "6"%>
          </div>

          <div class="text-center text-lg-start mt-4 pt-2">
            <%= f.submit "登録", class:"btn btn-primary text-white btn-lg", style:"padding-left: 2.5rem; padding-right: 2.5rem;" %>
            <p class="small fw-bold mt-2 pt-1 mb-0">会員登録がお済みの方はこちらから
            <%= link_to "ログイン", new_user_session_path %></p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>

<link href="login.scss" rel="stylesheet">
