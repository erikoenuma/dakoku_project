<section class="vh-100">
  <div class="container py-5 h-100">
    <div class="row justify-content-center align-items-center h-100">
      <div class="col-12 col-lg-9 col-xl-7">
        <div class="card shadow-2-strong card-registration" style="border-radius: 15px;">
          <div class="card-body p-4 p-md-5">
            <h3 class="mb-4 pb-2 pb-md-0 mb-md-5"><%= t('.title') %> (<%= @user_project.project.name %>)</h3>

              <div class="row align-items-center">
                <div class="col-md-6 mb-4">
                      <%= Contract.human_attribute_name :wage %>: <%= @contract.wage %>円/<%= @contract.wage_per %>
                </div>
                <div class="col-md-4 mb-4">
                      <%= Contract.human_attribute_name :hours_per_month %>: <%= @contract.hours_per_month %>時間
                </div>
              </div>
              <div class="row">
                <div class="col-md-12 mb-4">
                        <%= Contract.human_attribute_name :start_at %>: <%= @contract.start_at %> ～ <%= @contract.end_at %>
                </div>
              </div>

              <div class="row">
                <div class="col-md-6 mb-4">
                  <%= Contract.human_attribute_name :role %>: <%= @contract.role %>
                </div>
                <div class="col-md-6 mb-4">
                  <%= Contract.human_attribute_name :daily_reports_required %>: <%= @contract.daily_reports_required ? "要": "不要" %>
                </div>
              </div>
              
              <div class="row justify-content-center">
                <div class="mt-4 pt-2 mx-2">
                  <%= link_to t('helpers.links.back'), user_custom_projects_path(current_user), class:"btn btn-outline-secondary text-black btn-lg" %>
                </div>

                <% if @user_project.project.company == nil %>
                  <div class="mt-4 pt-2 mx-2">
                    <%= link_to t('helpers.links.edit'), edit_user_project_contract_path(@user_project, @contract), class:"btn btn-primary text-white btn-lg" %>
                  </div>
                <% end %>
              <div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
