<p id="notice"><%= notice %></p>

<h1>Contracts</h1>

<table>
  <thead>
    <tr>
      <th>User project</th>
      <th>Wage</th>
      <th>Wage per</th>
      <th>Hours per month</th>
      <th>Start at</th>
      <th>End at</th>
      <th>Daily reports required</th>
      <th>Role</th>
      <th>Under contract</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contracts.each do |contract| %>
      <tr>
        <td><%= contract.user_project_id %></td>
        <td><%= contract.wage %></td>
        <td><%= contract.wage_per %></td>
        <td><%= contract.hours_per_month %></td>
        <td><%= contract.start_at %></td>
        <td><%= contract.end_at %></td>
        <td><%= contract.daily_reports_required %></td>
        <td><%= contract.role %></td>
        <td><%= contract.under_contract %></td>
        <td><%= link_to 'Show', contract %></td>
        <td><%= link_to 'Edit', edit_contract_path(contract) %></td>
        <td><%= link_to 'Destroy', contract, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Contract', new_contract_path %>
